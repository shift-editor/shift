{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "allowJs": false,
    "checkJs": false,
    "types": ["node", "vitest/globals", "react"],
    "strict": true,
    "noImplicitAny": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitOverride": true,
    "useUnknownInCatchVariables": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.test.ts", "src/renderer/src/testing/**/*.ts"],
  "exclude": ["node_modules", "dist", "out", ".turbo", "target"]
}
