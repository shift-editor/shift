{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "inputs": ["src/**", "package.json", "tsconfig.json"]
    },
    "build:native": {
      "inputs": ["crates/*/src/**", "crates/*/Cargo.toml", "Cargo.toml", "Cargo.lock"],
      "outputs": ["crates/shift-node/index.js", "crates/shift-node/index.d.ts", "crates/shift-node/*.node"]
    },
    "dev": {
      "dependsOn": ["build:native"],
      "cache": false,
      "persistent": true
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "lint": {
      "outputs": []
    },
    "lint:check": {
      "outputs": []
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "inputs": ["src/**", "*.config.ts"]
    }
  },
  "globalEnv": ["NODE_ENV"],
  "globalPassThroughEnv": [
    "CARGO_INCREMENTAL",
    "RUSTFLAGS",
    "CARGO_HOME",
    "RUSTUP_HOME"
  ]
}
