{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "//#clean:app": {},
    "clean": {
      "dependsOn": ["//#clean:app"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**"]
    },
    "lint": {},
    "//#types:rebuild": {
      "inputs": ["packages/shared/dist/**"]
    },
    "dev": {
      "dependsOn": ["//#types:rebuild"],
      "cache": false,
      "persistent": true
    },
    "test": {
      "cache": true
    }
  }
}
