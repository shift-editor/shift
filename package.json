{
  "name": "Shift",
  "productName": "Shift",
  "version": "0.0.1",
  "description": "An application for creating and editing fonts",
  "main": ".vite/build/main.js",
  "scripts": {
    "dev": "electron-forge start",
    "dev:app": "scripts/watch.sh",
    "clean": "rm -rf .vite/build && rm -rf node_modules && cargo clean && rm -rf out",
    "package": "pnpm run build:native && electron-forge package",
    "make": "pnpm run build:native && electron-forge make",
    "publish": "pnpm run build:native && electron-forge publish",
    "build:native": "pnpm --filter shift-node run build",
    "build:native:debug": "pnpm --filter shift-node run build:debug",
    "test:native": "pnpm --filter shift-node run test",
    "typecheck": "tsgo --noEmit",
    "format": "prettier --write \"apps/**/*.{js,jsx,ts,tsx,css,md,json}\"",
    "format:check": "prettier --check \"apps/**/*.{js,jsx,ts,tsx,css,md,json}\"",
    "lint": "oxlint --fix",
    "lint:check": "oxlint",
    "check-deps": "depcheck",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [],
  "author": {
    "name": "Kostya Farber",
    "email": "kostya.farber@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^7.8.1",
    "@electron-forge/maker-deb": "^7.8.1",
    "@electron-forge/maker-rpm": "^7.8.1",
    "@electron-forge/maker-squirrel": "^7.8.1",
    "@electron-forge/maker-zip": "^7.8.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.1",
    "@electron-forge/plugin-fuses": "^7.8.1",
    "@electron-forge/plugin-vite": "^7.8.1",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@electron/fuses": "^1.8.0",
    "@tailwindcss/vite": "^4.1.11",
    "@types/electron-squirrel-startup": "^1.0.2",
    "@typescript/native-preview": "^7.0.0-dev",
    "@vitejs/plugin-react": "^4.6.0",
    "concurrently": "^9.2.0",
    "electron": "37.1.0",
    "electron-vite": "^3.1.0",
    "nodemon": "^3.1.10",
    "oxlint": "^0.16.0",
    "tailwindcss": "^4.1.11",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0",
    "vite": "^5.4.19",
    "vite-plugin-svgr": "^4.3.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.17"
  },
  "dependencies": {
    "@radix-ui/react-tooltip": "^1.2.7",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/react-router-dom": "^5.3.3",
    "chroma-js": "^3.1.2",
    "clsx": "^2.1.1",
    "electron-squirrel-startup": "^1.0.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.3",
    "shift-node": "workspace:*",
    "tailwind-merge": "^3.3.1",
    "zustand": "^5.0.6"
  },
  "packageManager": "pnpm@9.0.0"
}
